<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="#DADADA"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/detailJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Construction Worker"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/detailPayRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM 80 / Day"
            android:textColor="#1976D2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Description"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Helping with site preparation, carrying materials, and basic tool operation. No advanced experience needed."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChatEmployer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:text="Message Employer"
            app:icon="@android:drawable/stat_notify_chat"
            android:textColor="@color/brand_dark_navy"
            app:cornerRadius="12dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>