<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/main"
    android:orientation="vertical">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:background="@color/frosted_medium_gray"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/JobMatch"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:text="JobMatch"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="70dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/JobMatchDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Where the right jobs meet the right people."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="normal" />

    </LinearLayout>

    <!-- Fragment Container fills remaining space -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_weight="1"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph_home" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@color/frosted_medium_gray"
        android:tint="#FFFFFF"
        app:itemIconTint="@null"
        app:itemTextColor="#FFFFFF"
        app:labelVisibilityMode="selected"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
