<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/frosted_background_white"
    tools:context="com.example.training.ActivityCourseDetail">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_course_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/brand_navy_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIconTint="@android:color/white"
        app:title="New Post"
        app:titleTextColor="@android:color/white" />

    <ProgressBar
        android:id="@+id/progress_bar_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="16dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/frosted_accent"
        android:visibility="gone"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="34dp" />

    <WebView
        android:id="@+id/web_view_course_content"
        android:layout_width="409dp"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_course_detail" />

    <Button
        android:id="@+id/goToForumButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:backgroundTint="@color/brand_navy_blue"
        android:text="Go To Forum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/web_view_course_content"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>