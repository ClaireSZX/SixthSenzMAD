<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frosted_background_white"
    android:padding="0dp">

    <!-- RecyclerView for comments -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerComments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="12dp"
        android:scrollbars="vertical"
        android:overScrollMode="ifContentScrolls"/>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/frosted_medium_gray"/>

    <!-- Input area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <EditText
            android:id="@+id/editTextComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Write a comment..."
            android:padding="12dp"
            android:background="@drawable/rounded_edit_text"
            android:textColor="@color/frosted_primary_dark"
            android:textColorHint="@color/frosted_medium_gray"
            android:inputType="textMultiLine"
            android:maxLines="3"/>

        <Button
            android:id="@+id/buttonSubmitComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:backgroundTint="@color/brand_navy_blue"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
