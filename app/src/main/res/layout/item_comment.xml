<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Replyer User"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/frosted_primary" />

        <TextView
            android:id="@+id/text_comment_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="5 min ago"
            android:textSize="11sp"
            android:textColor="@color/frosted_medium_gray" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="14sp"
        android:textColor="@color/frosted_primary_dark"
        android:text="I saw a sign for general labor near the old warehouse. Try looking there!" />

</LinearLayout>