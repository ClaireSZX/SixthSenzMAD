<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/frosted_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_course_placeholder"
            android:contentDescription="@string/course_thumbnail_desc" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/text_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acing the Local Job Interview"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/frosted_primary_dark" android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/text_course_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: Job Readiness"
                android:textSize="12sp"
                android:textColor="@color/frosted_primary_dark" android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/text_course_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 10 min"
                android:textSize="12sp"
                android:textColor="@color/frosted_primary_dark" android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>