<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/frosted_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/text_post_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Community Member"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/frosted_primary_dark" />

            <TextView
                android:id="@+id/text_post_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="2 hours ago"
                android:textSize="12sp"
                android:textColor="@color/frosted_medium_gray" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I am looking for part-time construction work near the local market. Does anyone know of any openings this week?"
            android:textSize="15sp"
            android:textColor="@color/frosted_primary"
            android:maxLines="3"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="View Comments (4)"
            android:textSize="12sp"
            android:textColor="@color/frosted_accent" />

    </LinearLayout>
</androidx.cardview.widget.CardView>